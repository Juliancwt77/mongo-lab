<%# include relative path to the partials file %>
<% include ../partials/header.ejs  %>

<h1>Detail of Parent</h1>

<form method="post" action="/users">
  <div class="form-group">
    <label for="name">NAME OF PARENT</label>
    <input type="text" class="form-control" id="name" name="newparent[name]" placeholder="Parent's Name">
  </div>
  <div class="form-group">
    <label for="nric">NRIC</label>
    <input type="text" class="form-control" id="nric" name="newparent[nric]" placeholder="NRIC">
  </div>
  <div class="form-group">
    <label for="address">Address</label>
    <input type="text" class="form-control" id="year" name="newparent[address]" placeholder="Address">
  </div>
  <button type="submit" class="btn btn-default">Submit</button>
</form>
